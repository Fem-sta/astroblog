---
//utils import
import {formatDate, slugify} from "../js/utils";


import { Image } from "astro:assets";

//component imports
import Link from "../components/Link.astro"

const { frontmatter, url, tagType} = Astro.props;
const Tag = tagType;
const {title, description, date, category, author, image} = frontmatter;

---

 <article class="post-card flex flex-col w-[400px] mx-auto">
      <div class="w-full max-w-md mx-auto mt-0">

              <!-- Category -->
              <small>
                <a href={`/category/${slugify(category)}`} class="badge">{category}</a>
              </small>
              
              <!--Image -->
              <a href={url}>
                <div class="h-[350px] w-full overflow-hidden rounded-xl">
                  <Image src={image.src} alt={image.alt} width="400" height="350"  class="w-full h-full object-cover rounded-xl" />
              </div>
              </a>

              <!--Content -->
            <div class="content py-4 px-2 flex-1">
              <Tag class="text-2xl leading-tight line-clamp-2 min-h-14">
                <a href={url}>{title}</a>
              </Tag>

              <small class="block mt-1 opacity-75">
                by <a href={`/author/${author}`}>{author}</a> | {formatDate(date)}
              </small>
            </div>

            <!--Description -->
            <p class="mt-4 line-clamp-4 first-letter:text-5xl first-letter:font-bold first-letter:float-left first-letter:mr-2 leading-relaxed first-letter:leading-[0.85] first-letter:font-[MedievalSharp] h-auto px-2 py-8">{description}</p>
        </div>

            {/* Button */}

            <div class="px-2 pb-4 mt-auto">
              <Link href={url} text="Read Post" style="primary">
            </div>
           
      </article>
